# Server Configuration
PORT=3002
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=knowledge_base
QDRANT_API_KEY=

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536
MAX_TOKENS_PER_CHUNK=500

# PostgreSQL Configuration (optional - for metadata storage)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=kb_api
DB_USER=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=20

# Redis Configuration (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# LLM Observatory Configuration
OBSERVATORY_ENABLED=true
OBSERVATORY_COLLECTOR_URL=http://localhost:4317
OBSERVATORY_SERVICE_NAME=kb-api
OBSERVATORY_SERVICE_VERSION=0.1.0
OBSERVATORY_ENVIRONMENT=development

# Document Processing Configuration
MAX_FILE_SIZE=10485760
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Search Configuration
SEARCH_DEFAULT_LIMIT=10
SEARCH_MAX_LIMIT=100
SEARCH_SCORE_THRESHOLD=0.7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
