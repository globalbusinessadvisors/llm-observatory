{
  "title": "Prometheus Stats",
  "uid": "prometheus-stats",
  "tags": ["prometheus", "monitoring"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "title": "Prometheus Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 0, "y": 0},
      "targets": [{
        "expr": "up{job=\"prometheus\"}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {"color": "red", "value": 0},
              {"color": "green", "value": 1}
            ]
          },
          "mappings": [
            {"type": "value", "value": "0", "text": "DOWN"},
            {"type": "value", "value": "1", "text": "UP"}
          ]
        }
      }
    },
    {
      "title": "Sample Ingestion Rate",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
      "targets": [{
        "expr": "rate(prometheus_tsdb_head_samples_appended_total[5m])",
        "legendFormat": "Samples/sec",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 10
          }
        }
      }
    },
    {
      "title": "Storage Size",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
      "targets": [{
        "expr": "prometheus_tsdb_storage_blocks_bytes",
        "legendFormat": "Storage",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      }
    },
    {
      "title": "Active Time Series",
      "type": "stat",
      "gridPos": {"h": 4, "w": 4, "x": 4, "y": 0},
      "targets": [{
        "expr": "prometheus_tsdb_head_series",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "short"
        }
      }
    },
    {
      "title": "Scrape Duration",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
      "targets": [{
        "expr": "scrape_duration_seconds",
        "legendFormat": "{{job}}",
        "refId": "A"
      }],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        }
      }
    },
    {
      "title": "Failed Scrapes",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
      "targets": [{
        "expr": "up == 0",
        "legendFormat": "{{job}} - {{instance}}",
        "refId": "A"
      }]
    }
  ]
}
